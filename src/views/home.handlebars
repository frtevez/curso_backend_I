<div>
    <h1>PRODUCTS</h1>
    <form action="http://localhost:8080/api/products" method="post">
        <input type="text" name="title">
        <input type="number" name="price">

        <button type="submit">Add Product</button>
    </form>
    <ul>
        {{#each products}}
        <li>
            <img src="{{this.thumbnails.[0]}}" alt="">
            <h2> {{this.title}} </h2>
            <p> {{this.price}} </p>
        </li>
        {{/each}}
    </ul>
</div>